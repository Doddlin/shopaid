<div class="row">
<h2>Create a shopping list</h2>
<div class="col-sm-3">&nbsp;
</div>

<div class="col-sm-6">
<%= form_for @list do |f|%>
    <div class="form-group">
        <%= f.text_field :name, :placeholder => "Your name", :class => "form-control" %>
    </div>
    <div class="form-group">
        <%= f.country_select :country, :class => "form-control" %>
    </div>
    <div class="form-group">
        <%= f.text_field :town, :placeholder => "Town/City", :class => "form-control" %>
    </div>
    <div class="form-group">
        <%= f.text_field :postcode, :placeholder => "Post Code", :class => "form-control" %>
    </div>
    <div class="form-group">
        <%= f.text_field :phone, :placeholder => "Phonenr", :class => "form-control" %>
    </div>
    <br>
    <%= f.submit "Save List", :class => "btn btn-success btn-large"%>
<% end %>
</div>
<div class="col-sm-3"></div>